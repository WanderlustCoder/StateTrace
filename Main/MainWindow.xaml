<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Reader"
        Height="600"
        Width="1000">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Top toolbar: just device selector + refresh -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
      <Label Content="Device:" VerticalAlignment="Center"/>
      <ComboBox Name="HostnameDropdown" Width="180" Margin="5,0"/>
      <Button Name="RefreshButton" Content="Scan Logs" Margin="5,0"/>

      <Label Content="Site:" VerticalAlignment="Center" Margin="15,0,0,0"/>
      <ComboBox Name="SiteDropdown" Width="80" Margin="5,0"/>
      <Label Content="Building:" VerticalAlignment="Center"/>
      <ComboBox Name="BuildingDropdown" Width="140" Margin="5,0"/>
    </StackPanel>

    <!-- Device details -->
    <StackPanel Grid.Row="1" Orientation="Vertical" Margin="5">
      <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
        <StackPanel Margin="0,0,15,0">
          <TextBlock Text="Hostname:" FontSize="12"/>
          <TextBox Name="HostnameBox" IsReadOnly="True" Width="140"/>
        </StackPanel>
        <StackPanel Margin="0,0,15,0">
          <TextBlock Text="Make:" FontSize="12"/>
          <TextBox Name="MakeBox" IsReadOnly="True" Width="100"/>
        </StackPanel>
        <StackPanel Margin="0,0,15,0">
          <TextBlock Text="Model:" FontSize="12"/>
          <TextBox Name="ModelBox" IsReadOnly="True" Width="120"/>
        </StackPanel>
      </StackPanel>
      <StackPanel Orientation="Horizontal">
        <StackPanel Margin="0,0,15,0">
          <TextBlock Text="Uptime:" FontSize="12"/>
          <TextBox Name="UptimeBox" IsReadOnly="True" Width="160"/>
        </StackPanel>
        <StackPanel Margin="0,0,15,0">
          <TextBlock Text="Ports:" FontSize="12"/>
          <TextBox Name="PortCountBox" IsReadOnly="True" Width="60"/>
        </StackPanel>
        <StackPanel Margin="0,0,15,0">
          <TextBlock Text="AuthDefaultVLAN:" FontSize="12"/>
          <TextBox Name="AuthDefaultVLANBox" IsReadOnly="True" Width="20"/>
        </StackPanel>
      </StackPanel>
    </StackPanel>

    <!-- Main tabs -->
    <TabControl Grid.Row="2" Margin="5">
      <TabItem Header="Interfaces">
        <ContentControl Name="InterfacesHost"/>
      </TabItem>
      <TabItem Header="SPAN">
        <ContentControl Name="SpanHost"/>
      </TabItem>
      <!-- Add more tabs here -->
    </TabControl>
  </Grid>
</Window>
