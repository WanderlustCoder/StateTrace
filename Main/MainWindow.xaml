<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Network Reader"
        Height="600"
        Width="1000"
        Background="#EAF0F8">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Top toolbar: device selector, refresh and filtering controls -->
    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5" Background="#001F3F">
      <Label Content="Device:" VerticalAlignment="Center" Foreground="White"/>
      <ComboBox Name="HostnameDropdown" Width="180" Margin="5,0"/>
      <Button Name="RefreshButton" Content="Scan Logs" Margin="5,0" Background="#FFD700" Foreground="Black"/>
      <!-- Checkbox to include archive data (most recent) -->
      <CheckBox Name="IncludeArchiveCheckbox" Content="Include archives" VerticalAlignment="Center" Margin="10,0" Foreground="White"/>
      <!-- Checkbox to include historical data from archives -->
      <CheckBox Name="IncludeHistoricalCheckbox" Content="Include history" VerticalAlignment="Center" Margin="5,0" Foreground="White"/>

      <Label Content="Site:" VerticalAlignment="Center" Margin="15,0,0,0" Foreground="White"/>
      <ComboBox Name="SiteDropdown" Width="80" Margin="5,0"/>
      <Label Content="Building:" VerticalAlignment="Center" Foreground="White"/>
      <ComboBox Name="BuildingDropdown" Width="100" Margin="5,0"/>
      <Label Content="Room:" VerticalAlignment="Center" Foreground="White"/>
      <ComboBox Name="RoomDropdown" Width="80" Margin="5,0"/>

      <!-- Show command buttons moved to their own row -->
    </StackPanel>

    <!-- Row 1: Show command controls -->
    <Grid Grid.Row="1" Margin="5">
      <!-- Use Margin instead of Padding on StackPanel. Padding is not supported on StackPanel in WPF.
           The surrounding Grid already provides margin spacing. -->
      <StackPanel Orientation="Horizontal" Background="#001F3F" Margin="5,0,5,0">
        <Label Content="Show Commands:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0"/>
        <Button Name="ShowCiscoButton" Content="Cisco" Width="90" Margin="0,0,5,0" Background="#FFD700" Foreground="Black" ToolTip="Copy Cisco show commands to clipboard"/>
        <Button Name="ShowBrocadeButton" Content="Brocade" Width="100" Margin="0,0,5,0" Background="#FFD700" Foreground="Black" ToolTip="Copy Brocade show commands to clipboard"/>
        <ComboBox Name="BrocadeOSDropdown" Width="80" Margin="0,0,0,0">
          <ComboBoxItem Content="v8.0.30"/>
          <ComboBoxItem Content="v8.0.95"/>
        </ComboBox>
      </StackPanel>
    </Grid>

    <!-- Main tabs -->
    <TabControl Grid.Row="2" Margin="5">
      <TabItem Header="Interfaces">
        <ContentControl Name="InterfacesHost"/>
      </TabItem>
      <TabItem Header="SPAN">
        <ContentControl Name="SpanHost"/>
      </TabItem>
      <TabItem Header="Search Interfaces">
        <ContentControl Name="SearchInterfacesHost"/>
      </TabItem>
      <!-- Add more tabs here -->
    </TabControl>
  </Grid>
</Window>
