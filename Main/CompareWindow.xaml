<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Compare Configs" Height="600" Width="700"
    Background="#EAF0F8">

  <!-- Give the root grid a light grey background to match the main theme -->
  <Grid Background="#EAF0F8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

    <!-- Row 0: Dropdowns and labels -->
    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="5">
      <ComboBox Name="Switch1Dropdown" Width="200" Margin="0,0,0,4"/>
      <ComboBox Name="Port1Dropdown" Width="200" Margin="0,0,0,4"/>
      <TextBlock Name="Template1Label" FontWeight="Bold" FontSize="13" Foreground="#001F3F" Margin="0,0,0,4"/>
    </StackPanel>

    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Vertical" Margin="5">
      <ComboBox Name="Switch2Dropdown" Width="200" Margin="0,0,0,4"/>
      <ComboBox Name="Port2Dropdown" Width="200" Margin="0,0,0,4"/>
      <TextBlock Name="Template2Label" FontWeight="Bold" FontSize="13" Foreground="#001F3F" Margin="0,0,0,4"/>
    </StackPanel>

    <!-- Row 1: Config TextBoxes -->
    <StackPanel Grid.Row="1" Grid.Column="0" Margin="5">
      <TextBox Name="Config1Box"
               FontFamily="Consolas" FontSize="12"
               TextWrapping="Wrap" AcceptsReturn="True"
               VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
               Height="200"
               Background="#F7F9FC" Foreground="Black" BorderBrush="#C0C0C0" BorderThickness="1"/>
    </StackPanel>
    <StackPanel Grid.Row="1" Grid.Column="1" Margin="5">
      <TextBox Name="Config2Box"
               FontFamily="Consolas" FontSize="12"
               TextWrapping="Wrap" AcceptsReturn="True"
               VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
               Height="200"
               Background="#F7F9FC" Foreground="Black" BorderBrush="#C0C0C0" BorderThickness="1"/>
    </StackPanel>

    <!-- Row 2: Config Deltas -->
    <StackPanel Grid.Row="2" Grid.Column="0" Margin="5">
      <TextBlock Text="Missing from Port 1:" FontWeight="Bold" Margin="0,0,0,4"/>
      <TextBox Name="Config1DeltaBox"
               FontFamily="Consolas" FontSize="12"
               TextWrapping="Wrap" AcceptsReturn="True"
               VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
               Height="200"
               Background="#F7F9FC" Foreground="Black" BorderBrush="#C0C0C0" BorderThickness="1"/>
    </StackPanel>
    <StackPanel Grid.Row="2" Grid.Column="1" Margin="5">
      <TextBlock Text="Missing from Port 2:" FontWeight="Bold" Margin="0,0,0,4"/>
      <TextBox Name="Config2DeltaBox"
               FontFamily="Consolas" FontSize="12"
               TextWrapping="Wrap" AcceptsReturn="True"
               VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
               Height="200"
               Background="#F7F9FC" Foreground="Black" BorderBrush="#C0C0C0" BorderThickness="1"/>
    </StackPanel>
  </Grid>
</Window>
