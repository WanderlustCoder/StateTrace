<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- TemplatesView presents the available configuration templates and allows
       the user to view and modify their contents.  A navy background
       maintains consistency with other views.  The left side lists
       template files; the right side displays the JSON content for
       the selected template.  Buttons allow saving edits back to disk. -->
  <Grid Background="#001F3F">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="200"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <!-- Main area with list and editor -->
      <RowDefinition Height="*"/>
      <!-- New template creation panel -->
      <RowDefinition Height="Auto"/>
      <!-- Buttons for reload/save -->
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <!-- Template list -->
    <StackPanel Grid.Row="0" Grid.Column="0" Margin="5" Background="#001F3F">
      <TextBlock Text="Templates" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
      <ListBox Name="TemplatesList" Background="#F7F9FC" BorderBrush="#C0C0C0" BorderThickness="1"/>
    </StackPanel>
    <!-- Editor -->
    <StackPanel Grid.Row="0" Grid.Column="1" Margin="5" Background="#001F3F">
      <TextBlock Text="Template Contents" FontSize="14" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
      <TextBox Name="TemplateEditor" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" TextWrapping="Wrap"
               Background="#F7F9FC" BorderBrush="#C0C0C0" BorderThickness="1"/>
    </StackPanel>
    <!-- New template creation panel -->
    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="5" Background="#001F3F">
      <TextBlock Text="New Template:" Foreground="White" VerticalAlignment="Center" Margin="0,0,5,0"/>
      <TextBox Name="NewTemplateNameBox" Width="120" Margin="0,0,5,0" Background="#F7F9FC" BorderBrush="#C0C0C0" BorderThickness="1" ToolTip="Enter template name (without extension)"/>
      <ComboBox Name="NewTemplateOSType" Width="100" Margin="0,0,5,0" SelectedIndex="0">
        <ComboBoxItem Content="Cisco"/>
        <ComboBoxItem Content="Brocade"/>
        <ComboBoxItem Content="Arista"/>
      </ComboBox>
      <Button Name="AddTemplateButton" Content="Add" Width="60" Background="#FFD700" Foreground="Black" ToolTip="Create new template"/>
    </StackPanel>
    <!-- Buttons -->
    <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" Background="#001F3F">
      <Button Name="ReloadTemplateButton" Content="Reload" Width="70" Margin="0,0,5,0" Background="#FFD700" Foreground="Black" ToolTip="Reload file from disk"/>
      <Button Name="SaveTemplateButton" Content="Save" Width="70" Background="#FFD700" Foreground="Black" ToolTip="Save changes to file"/>
    </StackPanel>
  </Grid>
</UserControl>