<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <TabControl Name="InfrastructureTabControl" Style="{DynamicResource LeftTabControlStyle}"
              ItemContainerStyle="{DynamicResource LeftNavTabItemStyle}">

    <TabItem Header="Topology" ToolTip="Network topology visualization and link discovery&#x0a;Related: Interfaces tab for port details">
      <ContentControl Name="TopologySubHost"/>
    </TabItem>
    <TabItem Header="Cables" ToolTip="Cable run tracking and patch panel management&#x0a;Related: Topology for connection visualization">
      <ContentControl Name="CablesSubHost"/>
    </TabItem>
    <TabItem Header="IPAM" ToolTip="IP address and VLAN management&#x0a;Related: Interfaces tab for VLAN assignments">
      <ContentControl Name="IPAMSubHost"/>
    </TabItem>
    <TabItem Header="Inventory" ToolTip="Asset tracking, warranty monitoring, and lifecycle planning&#x0a;Related: Capacity (Ops) for utilization data">
      <ContentControl Name="InventorySubHost"/>
    </TabItem>
  </TabControl>
</UserControl>
