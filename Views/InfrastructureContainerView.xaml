<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <TabControl Name="InfrastructureTabControl" TabStripPlacement="Left"
              Background="{DynamicResource Theme.Surface.Primary}">
    <TabControl.Resources>
      <Style TargetType="TabItem">
        <Setter Property="Background" Value="{DynamicResource Theme.Icon.Accent}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Theme.Border.Primary}"/>
        <Setter Property="MinWidth" Value="130"/>
        <Setter Property="Padding" Value="12,10"/>
        <Setter Property="Margin" Value="0,0,0,2"/>
        <Setter Property="Template">
          <Setter.Value>
            <ControlTemplate TargetType="TabItem">
              <Border Name="Border" Background="{TemplateBinding Background}"
                      BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,0,1"
                      Padding="{TemplateBinding Padding}" CornerRadius="4,0,0,4">
                <ContentPresenter ContentSource="Header" HorizontalAlignment="Left"/>
              </Border>
              <ControlTemplate.Triggers>
                <Trigger Property="IsSelected" Value="True">
                  <Setter TargetName="Border" Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
                  <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
                  <Setter Property="FontWeight" Value="SemiBold"/>
                </Trigger>
                <MultiTrigger>
                  <MultiTrigger.Conditions>
                    <Condition Property="IsMouseOver" Value="True"/>
                    <Condition Property="IsSelected" Value="False"/>
                  </MultiTrigger.Conditions>
                  <Setter TargetName="Border" Property="Background" Value="{DynamicResource Theme.Button.Primary.HoverBackground}"/>
                  <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.Text}"/>
                </MultiTrigger>
              </ControlTemplate.Triggers>
            </ControlTemplate>
          </Setter.Value>
        </Setter>
      </Style>
    </TabControl.Resources>

    <TabItem Header="Topology" ToolTip="Network topology visualization and link discovery&#x0a;Related: Interfaces tab for port details">
      <ContentControl Name="TopologySubHost"/>
    </TabItem>
    <TabItem Header="Cables" ToolTip="Cable run tracking and patch panel management&#x0a;Related: Topology for connection visualization">
      <ContentControl Name="CablesSubHost"/>
    </TabItem>
    <TabItem Header="IPAM" ToolTip="IP address and VLAN management&#x0a;Related: Interfaces tab for VLAN assignments">
      <ContentControl Name="IPAMSubHost"/>
    </TabItem>
    <TabItem Header="Inventory" ToolTip="Asset tracking, warranty monitoring, and lifecycle planning&#x0a;Related: Capacity (Ops) for utilization data">
      <ContentControl Name="InventorySubHost"/>
    </TabItem>
  </TabControl>
</UserControl>
