<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Help" Height="500" Width="650"
        WindowStartupLocation="CenterOwner" Background="{DynamicResource Theme.Window.Background}">
  <!-- HelpWindow provides documentation for the different sections of the
       application.  Each tab describes how to use a particular view. -->
  <Grid Background="{DynamicResource Theme.Surface.Secondary}" TextElement.Foreground="{DynamicResource Theme.Text.Primary}">
    <TabControl Margin="5">
      <!-- Overview tab provides a general description of the tool -->
      <TabItem Header="Overview">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="Overview" FontWeight="Bold" FontSize="14"/>
            <LineBreak/><LineBreak/>
            <Run Text="Network Reader is a static log reader for network engineers. It processes collected switch logs and presents a consolidated view of a branch's network state."/>
            <LineBreak/>
            <Run Text="Use this tool to:"/>
            <LineBreak/>
            <Run Text="- Scan log files for multiple switches and parse interface details."/>
            <LineBreak/>
            <Run Text="- Browse individual switches and configure ports using predefined templates."/>
            <LineBreak/>
            <Run Text="- Search across all interfaces for devices, port names or MAC addresses."/>
            <LineBreak/>
            <Run Text="- Generate a high-level summary of the network branch filtered by site, building or room."/>
            <LineBreak/>
            <Run Text="- Detect potential issues such as down ports, half duplex links or unauthorized connections."/>
            <LineBreak/>
            <Run Text="- Manage configuration templates and create new ones for specific operating systems."/>
            <LineBreak/>
            <Run Text="The application is designed to work with pre-collected logs and does not perform any live retrieval of data."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Interfaces">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="Interfaces View" FontWeight="Bold" FontSize="14"/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="The Interfaces tab displays details for the currently selected switch. You can: "/>
            <LineBreak/>
            <Run Text="- View status, VLAN, speed and authentication state for each port."/>
            <LineBreak/>
            <Run Text="- Edit port names and VLAN IDs directly in the grid."/>
            <LineBreak/>
            <Run Text="- Filter the list using the filter box above the table."/>
            <LineBreak/>
            <Run Text="- Select ports and click Compare Configs to compare two ports or Copy Details to copy information to the clipboard."/>
            <LineBreak/>
            <Run Text="- Use Configure to generate a configuration using the selected template."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Search">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="Search Interfaces" FontWeight="Bold" FontSize="14"/>
            <LineBreak/><LineBreak/>
            <Run Text="Search across all switches and ports using the search box."/>
            <LineBreak/>
            <Run Text="- Enter a port name, description or MAC address to find matching interfaces."/>
            <LineBreak/>
            <Run Text="- Enable Regex to treat the search term as a regular expression."/>
            <LineBreak/>
            <Run Text="- Filter by status (All, Up, Down) and authorization state (All, Authorized, Unauthorized)."/>
            <LineBreak/>
            <Run Text="- Export results to CSV using the Export button."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Summary">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="Summary" FontWeight="Bold" FontSize="14"/>
            <LineBreak/><LineBreak/>
            <Run Text="Provides a quick overview of the branch, including number of devices, interfaces and other counts."/>
            <LineBreak/>
            <Run Text="The summary automatically respects the Site/Building/Room filters set at the top of the main window."/>
            <LineBreak/>
            <Run Text="Use this tab to gauge overall health at a glance."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Templates">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="Templates" FontWeight="Bold" FontSize="14"/>
            <LineBreak/><LineBreak/>
            <Run Text="Manage configuration templates for generating switch port configurations."/>
            <LineBreak/>
            <Run Text="- Select a template from the list to view and edit its JSON contents."/>
            <LineBreak/>
            <Run Text="- Use Reload to revert to the saved version or Save to persist changes."/>
            <LineBreak/>
            <Run Text="- Create new templates by entering a name, choosing an OS and clicking Add. A default skeleton will be generated."/>
            <LineBreak/>
            <Run Text="Templates are stored as JSON files in the Templates directory."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="Alerts">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="Alerts" FontWeight="Bold" FontSize="14"/>
            <LineBreak/><LineBreak/>
            <Run Text="Lists potential issues detected in the branch."/>
            <LineBreak/>
            <Run Text="- A port is flagged if it is Down or NotConnect, unauthorized or half duplex."/>
            <LineBreak/>
            <Run Text="- Use the Export button to save the current list of alerts to CSV."/>
            <LineBreak/>
            <Run Text="The alerts list automatically updates when new logs are parsed or filters change."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
      <TabItem Header="SPAN">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <TextBlock TextWrapping="Wrap" Margin="10" FontSize="12">
            <Run Text="SPAN" FontWeight="Bold" FontSize="14"/>
            <LineBreak/><LineBreak/>
            <Run Text="Displays information about configured SPAN or port mirror sessions."/>
            <LineBreak/>
            <Run Text="Use this tab to review SPAN source and destination ports."/>
            <LineBreak/>
            <Run Text="Select a device from the top drop-downs to load its SPAN configuration."/>
          </TextBlock>
        </ScrollViewer>
      </TabItem>
    </TabControl>
  </Grid>
</Window>
