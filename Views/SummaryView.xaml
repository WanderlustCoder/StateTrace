<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- SummaryView displays overall metrics about the parsed network data.  A navy
       background ties into the application's theme, while white text ensures
       readability.  Individual metrics are placed in a UniformGrid for a
       clean, compact layout. -->
  <Grid Background="#001F3F" Margin="5">
    <StackPanel Orientation="Vertical">
      <TextBlock Text="Branch Summary" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
      <UniformGrid Columns="2" Rows="4" Margin="0,0,0,0">
        <!-- Devices count -->
        <StackPanel Margin="5">
          <TextBlock Text="Devices:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryDevicesCount" Foreground="White"/>
        </StackPanel>
        <!-- Interfaces count -->
        <StackPanel Margin="5">
          <TextBlock Text="Interfaces:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryInterfacesCount" Foreground="White"/>
        </StackPanel>
        <!-- Ports Up -->
        <StackPanel Margin="5">
          <TextBlock Text="Ports Up:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryUpCount" Foreground="White"/>
        </StackPanel>
        <!-- Ports Down -->
        <StackPanel Margin="5">
          <TextBlock Text="Ports Down:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryDownCount" Foreground="White"/>
        </StackPanel>
        <!-- Authorized ports -->
        <StackPanel Margin="5">
          <TextBlock Text="Authorized:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryAuthorizedCount" Foreground="White"/>
        </StackPanel>
        <!-- Unauthorized ports -->
        <StackPanel Margin="5">
          <TextBlock Text="Unauthorized:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryUnauthorizedCount" Foreground="White"/>
        </StackPanel>
        <!-- Unique VLANs -->
        <StackPanel Margin="5">
          <TextBlock Text="Unique VLANs:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryUniqueVlansCount" Foreground="White"/>
        </StackPanel>
        <!-- Placeholder for additional metrics -->
        <StackPanel Margin="5">
          <TextBlock Text="Extra:" Foreground="White" FontWeight="Bold"/>
          <TextBlock Name="SummaryExtra" Foreground="White"/>
        </StackPanel>
      </UniformGrid>
    </StackPanel>
  </Grid>
</UserControl>