<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <TabControl Name="OperationsTabControl" TabStripPlacement="Left"
              Background="{DynamicResource Theme.Surface.Primary}"
              ItemContainerStyle="{DynamicResource LeftNavTabItemStyle}">

    <TabItem Header="Changes" ToolTip="Change management and maintenance windows&#x0a;Related: Alerts tab for issue tracking">
      <ContentControl Name="ChangesSubHost"/>
    </TabItem>
    <TabItem Header="Capacity" ToolTip="Capacity planning and utilization forecasting&#x0a;Related: Interfaces tab for current utilization">
      <ContentControl Name="CapacitySubHost"/>
    </TabItem>
    <TabItem Header="Log Analysis" ToolTip="Log pattern detection and event correlation&#x0a;Related: Alerts tab for detected issues">
      <ContentControl Name="LogAnalysisSubHost"/>
    </TabItem>
  </TabControl>
</UserControl>
