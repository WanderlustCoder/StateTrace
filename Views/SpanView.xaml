<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!--
    SpanView provides a visualisation of spanning tree state for the selected
    switch.  A simple DataGrid lists VLAN or MST instances, the MAC address
    of the root switch and the local port used to reach the root.  A future
    enhancement could display a network graph to illustrate upstream links.
  -->
  <!-- Apply a navy background to the outer grid so the area around
       the spanning tree table appears navy.  Internal panels still
       define their own backgrounds as needed. -->
  <Grid Background="#001F3F">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <!-- Top bar with refresh and VLAN filter -->
    <!-- Place these controls on a yellow background to improve contrast
         against the navy page.  Padding around the controls improves
         visual separation. -->
    <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
      <Button Name="RefreshSpanButton"
              Content="Refresh"
              Width="80"
              Margin="0,0,10,0"
              Background="#FFD700"
              Foreground="Black"/>
      <!-- Use a white foreground to make the label stand out against the navy grid -->
      <Label Content="VLAN:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="White"/>
      <ComboBox Name="VlanDropdown" Width="100"/>
    </StackPanel>
    <!-- DataGrid listing spanning tree summary -->
    <DataGrid Name="SpanGrid"
              Grid.Row="1"
              AutoGenerateColumns="False"
              CanUserAddRows="False"
              IsReadOnly="True"
              Margin="5"
              Background="#F7F9FC"
              RowBackground="#E7ECF5"
              AlternatingRowBackground="#F1F5FA"
              ScrollViewer.VerticalScrollBarVisibility="Auto"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              BorderBrush="#C0C0C0"
              BorderThickness="1"
														VirtualizingPanel.IsVirtualizing="True"
														VirtualizingPanel.VirtualizationMode="Recycling"
														EnableRowVirtualization="True"
														EnableColumnVirtualization="True"
														ScrollViewer.CanContentScroll="True"
														VirtualizingPanel.ScrollUnit="Pixel">
      <DataGrid.RowStyle>
        <Style TargetType="DataGridRow">
          <Setter Property="Foreground" Value="Black"/>
          <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter Property="Background" Value="#FFF4BA"/>
              <Setter Property="Foreground" Value="Black"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </DataGrid.RowStyle>
      <DataGrid.Columns>
        <DataGridTextColumn Header="Instance" Binding="{Binding VLAN}" Width="80"/>
        <DataGridTextColumn Header="Root Switch" Binding="{Binding RootSwitch}" Width="150"/>
        <DataGridTextColumn Header="Root Port" Binding="{Binding RootPort}" Width="80"/>
        <DataGridTextColumn Header="Role" Binding="{Binding Role}" Width="80"/>
        <DataGridTextColumn Header="Upstream" Binding="{Binding Upstream}" Width="150"/>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>