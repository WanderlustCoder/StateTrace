<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Definition Builder" Height="800" Width="900">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0">
            <TextBlock Text="Make:" Margin="0,0,0,5"/>
            <ComboBox x:Name="MakeBox" Height="25" Margin="0,0,0,10" IsEditable="True"/>

            <TextBlock Text="Model:" Margin="0,0,0,5"/>
            <ComboBox x:Name="ModelBox" Height="25" Margin="0,0,0,10" IsEditable="True"/>

            <TextBlock Text="OS Version:" Margin="0,0,0,5"/>
            <ComboBox x:Name="OSBox" Height="25" Margin="0,0,0,10" IsEditable="True"/>

            <TextBlock Text="Category:" Margin="0,0,0,5"/>
            <ComboBox x:Name="CategoryBox" Height="25" Margin="0,0,0,10" IsEditable="True">
                <ComboBoxItem Content="system"/>
                <ComboBoxItem Content="interfaces"/>
                <ComboBoxItem Content="routing"/>
                <ComboBoxItem Content="diagnostics"/>
                <ComboBoxItem Content="security"/>
                <ComboBoxItem Content="other"/>
            </ComboBox>

            <TextBlock Text="Show Command:" Margin="0,0,0,5"/>
            <ComboBox x:Name="CommandBox" Height="25" Margin="0,0,0,10" IsEditable="True"/>

            <TextBlock Text="Detected Columns:" Margin="0,0,0,5"/>
            <TextBox x:Name="ColumnsPreview" Height="80" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10" IsReadOnly="True"/>

            <TextBlock Text="Sample Output Preview:" Margin="0,0,0,5"/>
            <TextBox x:Name="OutputPreview" Height="120" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10" IsReadOnly="True"/>

            <TextBlock Text="Description (optional):" Margin="0,0,0,5"/>
            <TextBox x:Name="DescriptionBox" Height="60" AcceptsReturn="True" TextWrapping="Wrap" Margin="0,0,0,10"/>

            <WrapPanel Margin="0,5,0,0">
                <Button x:Name="SaveButton" Content="Save Definition" Width="130" Margin="0,0,10,0"/>
                <Button x:Name="BulkLoadButton" Content="Bulk Load Logs" Width="120" Margin="0,0,10,0"/>
                <Button x:Name="DetectButton" Content="Detect from Logs" Width="130"/>
            </WrapPanel>
        </StackPanel>

        <StackPanel Grid.Column="1" Margin="10,0,0,0">
            <TextBlock Text="Available Logs:" Margin="0,0,0,5"/>
            <ListBox x:Name="LogList" Height="120" Margin="0,0,0,10"/>

            <TextBlock Text="Saved Commands for Selected Device:" Margin="0,10,0,5"/>
            <ListBox x:Name="CommandList" Height="200" Margin="0,0,0,10"/>

            <WrapPanel>
                <Button x:Name="LoadSelectedButton" Content="Load Selected" Width="110" Margin="0,0,10,0"/>
                <Button x:Name="DeleteSelectedButton" Content="Delete Selected" Width="110" Margin="0,0,10,0"/>
                <Button x:Name="ExportSelectedButton" Content="Export Definition" Width="110" Margin="0,5,10,0"/>
				<Button x:Name="SaveAllButton" Content="Save All Definitions" Width="110" Margin="0,5,10,0"/>
            </WrapPanel>
        </StackPanel>
    </Grid>
</Window>
