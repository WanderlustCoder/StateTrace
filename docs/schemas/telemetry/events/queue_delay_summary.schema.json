{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://statetrace.local/schemas/telemetry/events/queue_delay_summary.schema.json",
  "title": "QueueDelaySummary Event",
  "description": "Emitted periodically with queue delay statistics",
  "type": "object",
  "required": ["EventName", "Timestamp"],
  "properties": {
    "EventName": {
      "const": "QueueDelaySummary",
      "description": "Event type identifier"
    },
    "Timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp when event was emitted"
    },
    "QueueDepth": {
      "type": "integer",
      "minimum": 0,
      "description": "Current queue depth"
    },
    "AvgDelayMs": {
      "type": "number",
      "minimum": 0,
      "description": "Average delay in milliseconds"
    },
    "MaxDelayMs": {
      "type": "number",
      "minimum": 0,
      "description": "Maximum delay in milliseconds"
    },
    "P95DelayMs": {
      "type": "number",
      "minimum": 0,
      "description": "95th percentile delay in milliseconds"
    }
  },
  "additionalProperties": true
}
