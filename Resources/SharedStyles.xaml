<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!-- Standard Spacing Values -->
  <sys:Double x:Key="SpacingXS">2</sys:Double>
  <sys:Double x:Key="SpacingSM">5</sys:Double>
  <sys:Double x:Key="SpacingMD">10</sys:Double>
  <sys:Double x:Key="SpacingLG">15</sys:Double>
  <sys:Double x:Key="SpacingXL">20</sys:Double>

  <Thickness x:Key="ToolbarMargin">0,0,0,10</Thickness>
  <Thickness x:Key="SectionMargin">0,0,0,15</Thickness>
  <Thickness x:Key="CardPadding">10</Thickness>
  <Thickness x:Key="FormFieldMargin">0,0,0,10</Thickness>
  <Thickness x:Key="ButtonSpacing">0,0,5,0</Thickness>

  <!-- Text Styles -->
  <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="14"/>
    <Setter Property="FontWeight" Value="Bold"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="Margin" Value="0,0,0,10"/>
  </Style>

  <Style x:Key="SubtitleStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="11"/>
    <Setter Property="FontWeight" Value="Normal"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Secondary}"/>
  </Style>

  <Style x:Key="CardHeaderStyle" TargetType="TextBlock">
    <Setter Property="FontSize" Value="12"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="Margin" Value="0,0,0,5"/>
  </Style>

  <!-- Card/Panel Styles -->
  <Style x:Key="CardStyle" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Surface.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="12"/>
  </Style>

  <Style x:Key="SummaryCardStyle" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
    <Setter Property="CornerRadius" Value="5"/>
    <Setter Property="Padding" Value="10"/>
  </Style>

  <!-- Toolbar Style -->
  <Style x:Key="ToolbarPanelStyle" TargetType="StackPanel">
    <Setter Property="Orientation" Value="Horizontal"/>
    <Setter Property="Margin" Value="{StaticResource ToolbarMargin}"/>
  </Style>

  <!-- Form Panel Style -->
  <Style x:Key="FormPanelStyle" TargetType="StackPanel">
    <Setter Property="Margin" Value="0"/>
  </Style>

  <!-- Details Panel Style -->
  <Style x:Key="DetailsPanelStyle" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
    <Setter Property="Padding" Value="10"/>
  </Style>

  <!-- Global TabItem Style (top tabs) -->
  <Style x:Key="ThemedTabItemStyle" TargetType="TabItem">
    <Setter Property="Background" Value="{DynamicResource Theme.Surface.Primary}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Inverse}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Border.Primary}"/>
    <Setter Property="Padding" Value="12,8"/>
    <Setter Property="Margin" Value="0,0,2,0"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="TabItem">
          <Border Name="Border" Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,1,0"
                  Padding="{TemplateBinding Padding}" CornerRadius="4,4,0,0">
            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter TargetName="Border" Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
              <Setter Property="FontWeight" Value="SemiBold"/>
            </Trigger>
            <MultiTrigger>
              <MultiTrigger.Conditions>
                <Condition Property="IsMouseOver" Value="True"/>
                <Condition Property="IsSelected" Value="False"/>
              </MultiTrigger.Conditions>
              <Setter TargetName="Border" Property="Background" Value="{DynamicResource Theme.Button.Secondary.HoverBackground}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Inverse}"/>
            </MultiTrigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Left Navigation TabItem Style (for container views with left TabStripPlacement) -->
  <Style x:Key="LeftNavTabItemStyle" TargetType="TabItem">
    <Setter Property="Background" Value="{DynamicResource Theme.Icon.Accent}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Border.Primary}"/>
    <Setter Property="MinWidth" Value="130"/>
    <Setter Property="Padding" Value="12,10"/>
    <Setter Property="Margin" Value="0,0,0,2"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="TabItem">
          <Border Name="Border" Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1,1,0,1"
                  Padding="{TemplateBinding Padding}" CornerRadius="4,0,0,4">
            <ContentPresenter ContentSource="Header" HorizontalAlignment="Left"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter TargetName="Border" Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
              <Setter Property="FontWeight" Value="SemiBold"/>
            </Trigger>
            <MultiTrigger>
              <MultiTrigger.Conditions>
                <Condition Property="IsMouseOver" Value="True"/>
                <Condition Property="IsSelected" Value="False"/>
              </MultiTrigger.Conditions>
              <Setter TargetName="Border" Property="Background" Value="{DynamicResource Theme.Button.Primary.HoverBackground}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.Text}"/>
            </MultiTrigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

  <!-- Standard Button Widths (use with Style binding, e.g., Style="{DynamicResource SmallButtonStyle}") -->
  <Style x:Key="SmallButtonStyle" TargetType="Button">
    <Setter Property="Width" Value="60"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Border.Primary}"/>
    <Setter Property="Padding" Value="6,2"/>
  </Style>

  <Style x:Key="MediumButtonStyle" TargetType="Button">
    <Setter Property="Width" Value="100"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Border.Primary}"/>
    <Setter Property="Padding" Value="6,2"/>
  </Style>

  <Style x:Key="LargeButtonStyle" TargetType="Button">
    <Setter Property="Width" Value="140"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Border.Primary}"/>
    <Setter Property="Padding" Value="6,2"/>
  </Style>

  <!-- Danger Button Style -->
  <Style x:Key="DangerButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Status.Danger}"/>
    <Setter Property="Foreground" Value="#FFFFFF"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Status.Danger}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="#C0392B"/>
        <Setter Property="BorderBrush" Value="#C0392B"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="PrimaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Primary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Surface.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Primary.HoverBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.HoverText}"/>
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Primary.PressedBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.PressedText}"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Cursor" Value="Arrow"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="SecondaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Surface.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.HoverBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.HoverText}"/>
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.PressedBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.PressedText}"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Cursor" Value="Arrow"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="IconButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Icon.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Icon.Foreground}"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Icon.HoverForeground}"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
        <Setter Property="Cursor" Value="Arrow"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="ToolbarLabelStyle" TargetType="Label">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Toolbar.Text}"/>
  </Style>

  <Style x:Key="ToolbarCheckBoxStyle" TargetType="CheckBox">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Toolbar.Text}"/>
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="Background" Value="{DynamicResource Theme.Input.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Input.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Input.Border}"/>
    <Setter Property="SelectionBrush" Value="{DynamicResource Theme.Surface.Primary}"/>
    <Setter Property="SelectionTextBrush" Value="{DynamicResource Theme.Text.Inverse}"/>
  </Style>
  <Style x:Key="ToolbarComboEditableTextBoxStyle" TargetType="TextBox">
    <Setter Property="Background" Value="{DynamicResource Theme.Input.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Input.Text}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="0"/>
  </Style>

  <Style x:Key="ToolbarComboBoxItemStyle" TargetType="ComboBoxItem">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Input.Text}"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Input.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Input.Border}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="4,2"/>
    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    <Setter Property="VerticalContentAlignment" Value="Center"/>
    <Setter Property="Template">
      <Setter.Value>
        <ControlTemplate TargetType="ComboBoxItem">
          <Border x:Name="Root"
                  Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Padding="{TemplateBinding Padding}"
                  SnapsToDevicePixels="True">
            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                              Margin="0"
                              RecognizesAccessKey="True"/>
          </Border>
          <ControlTemplate.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
              <Setter TargetName="Root" Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
            </Trigger>
            <Trigger Property="IsSelected" Value="True">
              <Setter TargetName="Root" Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
            </Trigger>
            <Trigger Property="IsEnabled" Value="False">
              <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
              <Setter TargetName="Root" Property="Opacity" Value="0.7"/>
            </Trigger>
          </ControlTemplate.Triggers>
        </ControlTemplate>
      </Setter.Value>
    </Setter>
  </Style>

      <ControlTemplate x:Key="ToolbarComboBoxTemplate" TargetType="ComboBox">
    <Grid x:Name="Root" SnapsToDevicePixels="True">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <Popup x:Name="PART_Popup"
             AllowsTransparency="True"
             Placement="Bottom"
             IsOpen="{TemplateBinding IsDropDownOpen}"
             Focusable="False"
             PopupAnimation="Slide">
        <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{TemplateBinding ActualWidth}">
          <Border x:Name="DropDownBorder"
                  Background="{DynamicResource Theme.Input.Background}"
                  BorderBrush="{DynamicResource Theme.Input.Border}"
                  BorderThickness="1"
                  CornerRadius="2"
                  SnapsToDevicePixels="True">
                    <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
          <ItemsPresenter SnapsToDevicePixels="True"/>
        </ScrollViewer>
          </Border>
        </Grid>
      </Popup>

      <Border x:Name="ContentBorder"
              Grid.ColumnSpan="2"
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="{TemplateBinding BorderThickness}"
              CornerRadius="2"
              Padding="2"
              SnapsToDevicePixels="True">
        <Grid>
          <ContentPresenter x:Name="ContentPresenter"
                            Margin="2,0,24,0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            RecognizesAccessKey="True"
                            Content="{TemplateBinding SelectionBoxItem}"
                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                            SnapsToDevicePixels="True"
                            IsHitTestVisible="False"/>
          <TextBox x:Name="PART_EditableTextBox"
                   Style="{StaticResource ToolbarComboEditableTextBoxStyle}"
                   Background="{DynamicResource Theme.Input.Background}"
                   Foreground="{DynamicResource Theme.Input.Text}"
                   BorderThickness="0"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Center"
                   Visibility="Hidden"
                   Text="{TemplateBinding Text}"/>
        </Grid>
      </Border>

      <ToggleButton x:Name="DropDownToggle"
                    Grid.Column="1"
                    Margin="0"
                    Focusable="False"
                    ClickMode="Press"
                    IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                    Background="Transparent"
                    BorderBrush="Transparent">
        <Grid Width="18" Height="18" HorizontalAlignment="Center" VerticalAlignment="Center">
          <Path Data="M 0 0 L 4 4 L 8 0 Z"
                Stretch="Uniform"
                Fill="{DynamicResource Theme.Input.Text}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"/>
        </Grid>
      </ToggleButton>
    </Grid>

    <ControlTemplate.Triggers>
      <Trigger Property="IsEditable" Value="True">
        <Setter Property="Visibility" TargetName="ContentPresenter" Value="Hidden"/>
        <Setter Property="Visibility" TargetName="PART_EditableTextBox" Value="Visible"/>
      </Trigger>
      <Trigger Property="HasItems" Value="False">
        <Setter Property="MinHeight" TargetName="DropDownBorder" Value="0"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Opacity" TargetName="Root" Value="0.6"/>
      </Trigger>
      <Trigger SourceName="DropDownToggle" Property="IsPressed" Value="True">
        <Setter Property="Background" TargetName="ContentBorder" Value="{DynamicResource Theme.Surface.Secondary}"/>
      </Trigger>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="BorderBrush" TargetName="ContentBorder" Value="{DynamicResource Theme.Input.Border}"/>
      </Trigger>
    </ControlTemplate.Triggers>
  </ControlTemplate>
  <Style x:Key="ToolbarComboBoxStyle" TargetType="ComboBox">
    <Style.Resources>
      <Style TargetType="TextBox" BasedOn="{StaticResource ToolbarComboEditableTextBoxStyle}"/>
      <Style x:Key="ComboBoxEditableTextBox" TargetType="TextBox" BasedOn="{StaticResource ToolbarComboEditableTextBoxStyle}"/>
      <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ToolbarComboBoxItemStyle}"/>
    </Style.Resources>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Input.Text}"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Input.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Input.Border}"/>
    <Setter Property="TextElement.Foreground" Value="{DynamicResource Theme.Input.Text}"/>
    <Setter Property="Template" Value="{StaticResource ToolbarComboBoxTemplate}"/>
    <Setter Property="ItemContainerStyle" Value="{StaticResource ToolbarComboBoxItemStyle}"/>
  </Style>

  <Style x:Key="PrimaryDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
    <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.HeaderBackground}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.HeaderText}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.DataGrid.Border}"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
  </Style>

  <!-- Default DataGridColumnHeader style - applies to ALL DataGrids automatically -->
  <Style TargetType="DataGridColumnHeader">
    <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.HeaderBackground}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.HeaderText}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.DataGrid.Border}"/>
    <Setter Property="Padding" Value="8,4"/>
    <Setter Property="FontWeight" Value="SemiBold"/>
    <Setter Property="BorderThickness" Value="0,0,1,1"/>
  </Style>

  <!-- Default DataGridRow style - applies to ALL DataGrids automatically -->
  <Style TargetType="DataGridRow">
    <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.Row}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.SelectionText}"/>
      </Trigger>
      <Trigger Property="AlternationIndex" Value="1">
        <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.RowAlt}"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <!-- Default DataGridCell style - applies to ALL DataGrids automatically -->
  <Style TargetType="DataGridCell">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="4,2"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.SelectionText}"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <!-- DataGridStyle - the main style used by most views -->
  <Style x:Key="DataGridStyle" TargetType="DataGrid">
    <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.Background}"/>
    <Setter Property="RowBackground" Value="{DynamicResource Theme.DataGrid.Row}"/>
    <Setter Property="AlternatingRowBackground" Value="{DynamicResource Theme.DataGrid.RowAlt}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.DataGrid.Border}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="GridLinesVisibility" Value="Horizontal"/>
    <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource Theme.DataGrid.Border}"/>
    <Setter Property="ColumnHeaderStyle" Value="{StaticResource PrimaryDataGridColumnHeaderStyle}"/>
    <Setter Property="RowStyle">
      <Setter.Value>
        <Style TargetType="DataGridRow">
          <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
          <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.SelectionText}"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </Setter.Value>
    </Setter>
    <Setter Property="CellStyle">
      <Setter.Value>
        <Style TargetType="DataGridCell">
          <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
          <Setter Property="BorderThickness" Value="0"/>
          <Setter Property="Padding" Value="4,2"/>
          <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
              <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.SelectionText}"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="PrimaryDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource DataGridStyle}">
    <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.Background}"/>
    <Setter Property="RowBackground" Value="{DynamicResource Theme.DataGrid.Row}"/>
    <Setter Property="AlternatingRowBackground" Value="{DynamicResource Theme.DataGrid.RowAlt}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.DataGrid.Border}"/>
    <Setter Property="ColumnHeaderStyle" Value="{StaticResource PrimaryDataGridColumnHeaderStyle}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="SelectionMode" Value="Extended"/>
  </Style>

  <Style x:Key="PrimaryDataGridRowStyle" TargetType="DataGridRow">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.SelectionText}"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <!-- Loading Indicator Style -->
  <Style x:Key="LoadingIndicatorStyle" TargetType="Border">
    <Setter Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
    <Setter Property="CornerRadius" Value="6"/>
    <Setter Property="Padding" Value="20,12"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Setter Property="Visibility" Value="Collapsed"/>
  </Style>

  <Style x:Key="LoadingTextStyle" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="FontSize" Value="13"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
  </Style>

  <Style x:Key="LoadingProgressStyle" TargetType="ProgressBar">
    <Setter Property="IsIndeterminate" Value="True"/>
    <Setter Property="Height" Value="4"/>
    <Setter Property="Width" Value="120"/>
    <Setter Property="Margin" Value="0,8,0,0"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Icon.Accent}"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Surface.Primary}"/>
  </Style>
</ResourceDictionary>
