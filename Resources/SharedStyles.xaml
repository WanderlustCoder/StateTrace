<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style x:Key="PrimaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Primary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Surface.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Primary.HoverBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.HoverText}"/>
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Primary.PressedBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Primary.PressedText}"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Cursor" Value="Arrow"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="SecondaryButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.Text}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Surface.Border}"/>
    <Setter Property="BorderThickness" Value="1"/>
    <Setter Property="Padding" Value="6,2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.HoverBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.HoverText}"/>
      </Trigger>
      <Trigger Property="IsPressed" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Secondary.PressedBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Secondary.PressedText}"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Background" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource Theme.Button.Disabled.Background}"/>
        <Setter Property="Cursor" Value="Arrow"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="IconButtonStyle" TargetType="Button">
    <Setter Property="Background" Value="{DynamicResource Theme.Button.Icon.Background}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Icon.Foreground}"/>
    <Setter Property="BorderBrush" Value="Transparent"/>
    <Setter Property="BorderThickness" Value="0"/>
    <Setter Property="Padding" Value="2"/>
    <Setter Property="Cursor" Value="Hand"/>
    <Setter Property="HorizontalAlignment" Value="Center"/>
    <Setter Property="VerticalAlignment" Value="Center"/>
    <Style.Triggers>
      <Trigger Property="IsMouseOver" Value="True">
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Icon.HoverForeground}"/>
      </Trigger>
      <Trigger Property="IsEnabled" Value="False">
        <Setter Property="Foreground" Value="{DynamicResource Theme.Button.Disabled.Text}"/>
        <Setter Property="Cursor" Value="Arrow"/>
      </Trigger>
    </Style.Triggers>
  </Style>

  <Style x:Key="ToolbarLabelStyle" TargetType="Label">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Toolbar.Text}"/>
  </Style>

  <Style x:Key="ToolbarCheckBoxStyle" TargetType="CheckBox">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Toolbar.Text}"/>
  </Style>

  <Style x:Key="ToolbarComboBoxStyle" TargetType="ComboBox">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Input.Text}"/>
    <Setter Property="Background" Value="{DynamicResource Theme.Input.Background}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.Input.Border}"/>
    <Setter Property="ItemContainerStyle">
      <Setter.Value>
        <Style TargetType="ComboBoxItem">
          <Setter Property="Foreground" Value="{DynamicResource Theme.Input.Text}"/>
          <Setter Property="Background" Value="{DynamicResource Theme.Input.Background}"/>
          <Style.Triggers>
            <Trigger Property="IsHighlighted" Value="True">
              <Setter Property="Background" Value="{DynamicResource Theme.Surface.Secondary}"/>
              <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
            </Trigger>
          </Style.Triggers>
        </Style>
      </Setter.Value>
    </Setter>
  </Style>

  <Style x:Key="PrimaryDataGridStyle" TargetType="DataGrid">
    <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.Background}"/>
    <Setter Property="RowBackground" Value="{DynamicResource Theme.DataGrid.Row}"/>
    <Setter Property="AlternatingRowBackground" Value="{DynamicResource Theme.DataGrid.RowAlt}"/>
    <Setter Property="BorderBrush" Value="{DynamicResource Theme.DataGrid.Border}"/>
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Setter Property="SelectionMode" Value="Extended"/>
  </Style>

  <Style x:Key="PrimaryDataGridRowStyle" TargetType="DataGridRow">
    <Setter Property="Foreground" Value="{DynamicResource Theme.Text.Primary}"/>
    <Style.Triggers>
      <Trigger Property="IsSelected" Value="True">
        <Setter Property="Background" Value="{DynamicResource Theme.DataGrid.SelectionBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource Theme.DataGrid.SelectionText}"/>
      </Trigger>
    </Style.Triggers>
  </Style>
</ResourceDictionary>

